{
  "name": "sparks",
  "description": "A Sparked by Resistance dice-rolling bot for Discord",
  "author": "Kavita Poduri kavi.pdri@gmail.com (http://github.com/yrgirlkv)",
  "dependencies": {
    "@discordjs/rest": "^1.0.1",
    "discord.js": "^14.1.1"
  },
  "main": "src/index.ts",
  "scripts": {
    "start": "node build/index.js",
    "dev": "concurrently \"tsc -w\" \"nodemon build/index.js\"",
    "debug": "nodemon src/index.ts",
    "deploy:commands": "node build/deploy-commands.js",
    "format": "prettier --write . --no-config",
    "prepare": "husky install",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "concurrently": "^7.3.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.19",
    "prettier": "2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "@typescript-eslint/switch-exhaustiveness-check": "warn"
    }
  },
  "eslintIgnore": [
    "build/",
    "node_modules/"
  ]
}
